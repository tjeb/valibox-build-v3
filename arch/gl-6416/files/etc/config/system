
config system
	option hostname 'OpenWrt'
	option timezone 'UTC'

config timeserver 'ntp'
    list server '88.159.1.196'
    list server '85.255.214.66'
    list server '149.210.242.143'
    list server '93.94.224.67'
	list server '0.openwrt.pool.ntp.org'
	list server '1.openwrt.pool.ntp.org'
	list server '2.openwrt.pool.ntp.org'
	list server '3.openwrt.pool.ntp.org'
	option enabled '1'
	option enable_server '0'

config led 'led_lan'
    option name 'LAN'
    option trigger 'netdev'
    option dev 'eth1'
    option mode 'link tx rx'
    option default '0'
    option sysfs 'gl_ar150:lan'

config led 'led_wlan'
    option name 'WLAN'
    option default '0'
    option trigger 'netdev'
    option mode 'link tx rx'
    option dev 'wlan0'
    option sysfs 'gl_ar150:wlan'

config led
    option default '0'
    option name 'WAN'
    option trigger 'netdev'
    option dev 'eth0'
    option sysfs 'gl_ar150:wan'
    option mode 'link tx rx'

config led 'led_lan_6461'
	option name 'LAN'
	option trigger 'netdev'
	option dev 'eth1'
	option mode 'link tx rx'
	option default '0'
	option sysfs 'gl-connect:red:wlan'

config led 'led_wlan_6461'
	option name 'WLAN'
	option default '0'
	option sysfs 'ath9k-phy0'
	option trigger 'netdev'
	option mode 'link tx rx'
	option dev 'wlan0'

config led '6461'
	option default '0'
	option name 'WAN'
	option sysfs 'gl-connect:green:lan'
	option trigger 'netdev'
	option mode 'link'
	option dev 'eth0'

